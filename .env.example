# ========================================

# Rancher Security Audit - Environment Configuration

# ========================================

# Copy this file to .env and customize for your environment

# DO NOT commit .env file to version control!

# ––––––––––––––––––––

# Rancher Server Configuration

# ––––––––––––––––––––

# Rancher version to deploy

# See available versions: https://github.com/rancher/rancher/releases

RANCHER_VERSION=v2.8.0

# Rancher web interface ports

RANCHER_HTTP_PORT=8080
RANCHER_HTTPS_PORT=8443

# Rancher hostname (for accessing the UI)

RANCHER_HOSTNAME=localhost

# Initial bootstrap password (change after first login)

# Leave empty to auto-generate

CATTLE_BOOTSTRAP_PASSWORD=

# ––––––––––––––––––––

# Audit Tool Configuration

# ––––––––––––––––––––

# Rancher API endpoint (internal Docker network)

# Use ‘rancher’ as hostname (Docker service name)

RANCHER_URL=https://rancher:443

# Rancher API credentials

# Generate these in Rancher UI: User menu → API & Keys → Add Key

# IMPORTANT: Set these after initial Rancher setup!

RANCHER_ACCESS_KEY=
RANCHER_SECRET_KEY=

# SSL certificate verification

# Set to ‘false’ for self-signed certificates in testing

# Set to ‘true’ for production with valid certificates

VERIFY_SSL=false

# ––––––––––––––––––––

# Audit Scan Configuration

# ––––––––––––––––––––

# Cron schedule for automated scans (default: 2 AM daily)

# Format: minute hour day month weekday

# Examples:

# 0 2 * * *     - Daily at 2 AM

# 0 */6 * * *   - Every 6 hours

# 0 0 * * 0     - Weekly on Sunday at midnight

# 0 9 * * 1-5   - Weekdays at 9 AM

AUDIT_SCHEDULE=0 2 * * *

# Report output format: html, json, or text

REPORT_FORMAT=html

# How many days to keep old reports

REPORT_RETENTION_DAYS=30

# ––––––––––––––––––––

# System Configuration

# ––––––––––––––––––––

# Timezone for audit logs and reports

# Examples: America/New_York, Europe/London, Asia/Tokyo, UTC

TZ=UTC

# ––––––––––––––––––––

# Optional: Notification Settings

# ––––––––––––––––––––

# Slack webhook URL for notifications

# Leave empty to disable Slack notifications

SLACK_WEBHOOK_URL=

# Email notification settings

EMAIL_ENABLED=false
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=security-audit@example.com
EMAIL_TO=security-team@example.com

# ––––––––––––––––––––

# Optional: Advanced Settings

# ––––––––––––––––––––

# Enable debug mode for audit tool

DEBUG=false

# Maximum number of API retries

API_RETRY_COUNT=3

# API request timeout (seconds)

API_TIMEOUT=30

# Custom CA certificate path (if using custom PKI)

# CUSTOM_CA_CERT=/path/to/ca-cert.pem

# ––––––––––––––––––––

# Docker Compose Settings

# ––––––––––––––––––––

# Project name (prefix for container names)

COMPOSE_PROJECT_NAME=rancher-security

# Docker compose file to use

# COMPOSE_FILE=docker-compose.yml
